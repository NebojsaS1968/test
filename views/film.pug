extends layout

block content
    h1= film.title + ' ' + '(' + film.year + ')'    
    h4 Rating #{film.rating}
    h4 Directed by #{film.director}
    h4 Runtime #{film.runtime} minutes
    h4= film.plot

    hr
    a(href="/api/v1/filmovi/edit/" + film._id) Edit
    br
    br
    a#deleteOne(href="#", dataId = film._id) Delete
    br
    br
    form(action="/api/v1/filmovi/" + film._id, method="post")
        input(type="submit", name="addToWatchlist", value="Add to Watchlist")
    br
    label(for="grade") Rate the film
    br
    form(action="/api/v1/filmovi/" + film._id + '/rate', method="post")
        select(name="grade" class="grades")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
            option(value="6") 6
            option(value="7") 7
            option(value="8") 8
            option(value="9") 9
            option(value="10") 10
        br
        input(type="submit", value="Rate")